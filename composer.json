{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "nukacode/core": "~1.0"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/library",
            "app/models",
            "app/presenters",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "files": ["app/start/helpers.php"],
        "psr-4": {
            "NukaCode\\Core\\": "vendor/nukacode/core/src"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan config:publish nukacode/core",
            "php artisan key:generate",
            "php artisan migrate:install",
            "php artisan nuka:database",
            "npm install --save-dev gulp gulp-autoprefixer gulp-util gulp-notify gulp-minify-css gulp-uglify gulp-less gulp-rename gulp-concat",
            "gulp install",
            "php artisan nuka:theme",
            "chmod 755 public/",
            "chmod 755 public/index.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "component-dir": "vendor/components"
    },
    "minimum-stability": "dev"
}
