{
    "name": "nukacode/laravel-base",
    "description": "Base install for nuka code sites.",
    "license": "MIT",
    "require": {
        "nukacode/core": "~1.0"
    },
    "require-dev": {
        "way/generators":          "2.6.1",
        "codeception/codeception": "2.0.0"
    },
    "autoload": {
        "classmap": [
            "app/commands",
            "app/controllers",
            "app/library",
            "app/models",
            "app/presenters",
            "app/database/migrations",
            "app/database/seeds",
            "app/tests/TestCase.php"
        ],
        "files": ["app/start/helpers.php"]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "git submodule init",
            "git submodule update",
            "php artisan config:publish nukacode/core",
            "php artisan key:generate",
            "npm install --save-dev gulp gulp-autoprefixer gulp-util gulp-notify gulp-minify-css gulp-uglify gulp-less gulp-rename gulp-concat",
            "gulp install",
            "php artisan nuka:theme",
            "chmod 755 public/",
            "chmod 755 public/index.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "component-dir": "vendor/components"
    },
    "minimum-stability": "dev"
}
